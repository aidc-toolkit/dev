  "dependencies": {
    "@eslint/js": "^9.20.0",
    "@octokit/types": "^13.8.0",
    "@stylistic/eslint-plugin": "^3.1.0",
    "eslint-config-love": "^118.0.0",
    "eslint-plugin-jsdoc": "^50.6.3",
